<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_appIcon"
        style="@style/IconTopContent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txt_namaApp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/public_sans_reg"
        android:textColor="@color/colorFontDark"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/img_appIcon"
        app:layout_constraintStart_toEndOf="@+id/img_appIcon"
        app:layout_constraintTop_toTopOf="@+id/img_appIcon"
        tools:text="Twitter Dsdsdsd sdfdfdfdfdfdfdf" />

    <TextView
        android:id="@+id/lbl_diaksespada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/public_sans_reg"
        android:text="@string/diakses_pada"
        android:textColor="@color/colorFontDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_namaApp"
        app:layout_constraintEnd_toStartOf="@+id/txt_waktu_akses"
        app:layout_constraintTop_toTopOf="@+id/txt_namaApp" />

    <TextView
        android:id="@+id/txt_waktu_akses"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/public_sans_reg"
        android:textAlignment="center"
        tools:text="20:50 WIB"
        android:textColor="@color/colorFontDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_diaksespada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_diaksespada" />

</androidx.constraintlayout.widget.ConstraintLayout>
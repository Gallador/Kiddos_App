<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLittleBitDarker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorMainBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_title">@color/colorFontDark</item>
        <item name="md_color_content">@color/colorFontDark</item>
        <item name="md_color_button_text">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="ContentTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textColor">@color/colorFontDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconTopContent">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>